# OpenAI API Key for summarization
OPENAI_API_KEY=your_openai_api_key_here

# DeepSeek API Key for summarization
DEEPSEEK_API_KEY=

# Path to yt-dlp executable
PATH_TO_YT_DLP=path/to/yt-dlp

# Origin that is allowed to use the `OPENAI_API_KEY` & `DEEPSEEK_API_KEY` provided by the API
# instead of needing to provide them as `Authorization` in each request from client
ALLOWED_ORIGIN=http://localhost:3001

# Max Tokens (Limit the response length)
OPENAI_MAX_TOKENS=500
DEEPSEEK_MAX_TOKENS=1000

# AWS S3 Configuration (Optional to store text-to-speech audio files)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name
AWS_URL_EXPIRATION=3600 # Expiration time for presigned URLs in seconds
USE_S3=false




# Transcription API Configuration (WIP)
TRANSCRIBE_API_PORT=5566

# Whisper Model Configuration
MODEL_SIZE=tiny   # Options: tiny, base, small, medium, large-v2
DEVICE=cpu        # Options: cpu, cuda (for GPU)
COMPUTE_TYPE=int8 # Options: int8 (for CPU), float16 (for GPU)

# Whisper Processing Configuration
WHISPER_BEAM_SIZE=5       # Beam size for the decoder (higher = more accurate but slower)
WHISPER_LANGUAGE=en       # Language code (en, auto, etc.)
WHISPER_TEMPERATURE=0.3   # Temperature for sampling (lower = more focused results)
WHISPER_INITIAL_PROMPT="" # Optional prompt to guide transcription

# Audio Configuration
AUDIO_FORMAT=mp3        # Audio format for temporary files
AUDIO_QUALITY=96        # Audio quality in kbps
AUDIO_SAMPLE_RATE=16000 # Sample rate in Hz (16kHz)
AUDIO_CHANNELS=1        # Number of audio channels (1 = mono)

# Cache Configuration
ENABLE_CACHE=true   # Enable caching of transcription results
MAX_CACHE_ITEMS=100 # Maximum number of items to keep in cache
